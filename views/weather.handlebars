{{#each weather}}
		<div class="card" style="width: 100%">
			<div class="card-body">
				<p class="card-text">{{location}} {{currently.summary}}</p>
				<!--<p class="card-text">This week it will be:{{daily.summary}}</p>-->
				<canvas id="{{currently.time}}" width="128" height="128"></canvas>
				<script src"/js/skycons.js"></script>
				<script>
				var skycons = new Skycons({"color": "pink"});
				// ...or by the canvas DOM element itself.
				skycons.add(document.getElementById("{{currently.time}}"), "{{currently.icon}}");
				// if you're using the Forecast API, you can also supply
				// strings: "partly-cloudy-day" or "rain".
				// start animation!
				skycons.play();
				</script>
			</div>
		</div>
{{/each}}
